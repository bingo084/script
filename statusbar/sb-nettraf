#!/bin/sh

case $BUTTON in
	3) notify-send "ğŸŒ ç½‘ç»œæµé‡æ¨¡å—" "\- æŸ¥çœ‹å®æ—¶ç½‘ç»œæµé‡
- ğŸ”¼: ä¸‹è¡Œæµé‡
- ğŸ”½: ä¸Šè¡Œæµé‡" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

update() {
    sum=0
    for arg; do
        read -r i < "$arg"
        sum=$(( sum + i ))
    done
    cache=${XDG_CACHE_HOME:-$HOME/.cache}/${1##*/}
    [ -f "$cache" ] && read -r old < "$cache" || old=0
    printf %d\\n "$sum" > "$cache"
    printf %d\\n $(( sum - old ))
}

RX=$(update /sys/class/net/[ew]*/statistics/rx_bytes)
TX=$(update /sys/class/net/[ew]*/statistics/tx_bytes)

# æ¢ç®—å•ä½
if [[ $RX -lt 102400 ]];then
    # å¦‚æœæ¥æ”¶é€Ÿç‡å°äº100KB/sï¼Œå¿½ç•¥è¾“å‡º
    RX=""
elif [[ $RX -lt 1048576 ]];then
    # å¦åˆ™å¦‚æœæ¥æ”¶é€Ÿç‡å¤§äºç­‰äº100KB/så¹¶ä¸”å°äº1MB/sï¼Œåˆ™å•ä½ä¸ºKB/s
    RX=$(echo $RX | awk '{printf "%.2f", $1/1024} END {print "KB/s"}') 
else
    # å¦åˆ™å¦‚æœæ¥æ”¶é€Ÿç‡å¤§äºç­‰äº1MB/sï¼Œåˆ™å•ä½ä¸ºMB/s
    RX=$(echo $RX | awk '{printf "%.2f", $1/1048576} END {print "MB/s"}') 
fi

# æ¢ç®—å•ä½
if [[ $TX -lt 102400 ]];then
    # å¦‚æœå‘é€é€Ÿç‡å°äº100KB/sï¼Œå¿½ç•¥è¾“å‡º
    TX=""
elif [[ $TX -lt 1048576 ]];then
    # å¦åˆ™å¦‚æœå‘é€é€Ÿç‡å¤§äºç­‰äº100KB/så¹¶ä¸”å°äº1MB/sï¼Œåˆ™å•ä½ä¸ºKB/s
    TX=$(echo $TX | awk '{printf "%.2f", $1/1024} END {print "KB/s"}') 
else
    # å¦åˆ™å¦‚æœå‘é€é€Ÿç‡å¤§äºç­‰äº1MB/sï¼Œåˆ™å•ä½ä¸ºMB/s
    TX=$(echo $TX | awk '{printf "%.2f", $1/1048576} END {print "MB/s"}') 
fi

if [[ ! -z $RX ]];then
    printf " ğŸ”½:%7s" $RX
fi
if [[ ! -z $TX ]];then
    printf " ğŸ”¼:%7s" $TX
fi
